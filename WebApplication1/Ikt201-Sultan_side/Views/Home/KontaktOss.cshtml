@{
    ViewData["Title"] = "Kontakt oss";
}

<div class="container contact-container mt-5 mb-5">

    <h1 class="text-center mb-5">Kontakt oss</h1>

    <div class="row g-4">

        <!-- Contact Info -->
        <div class="col-lg-6">
            <div class="card contact-card shadow-lg h-100">
                <div class="card-body p-4">

                    <h3 class="section-title mb-4">Kontaktinformasjon</h3>

                    <div class="info-block mb-4">
                        <h5><i class="bi bi-geo-alt-fill me-2"></i>Adresse</h5>
                        <p class="ms-4">
                            Grønlandsleiret 16b<br>
                            0190 Oslo<br>
                            Norge
                        </p>
                    </div>

                    <div class="info-block mb-4">
                        <h5><i class="bi bi-telephone-fill me-2"></i>Telefon</h5>
                        <p class="ms-4">
                            <a href="tel:+4712345678" class="contact-link">+47 123 45 678</a>
                        </p>
                    </div>

                    <div class="info-block mb-4">
                        <h5><i class="bi bi-envelope-fill me-2"></i>E-post</h5>
                        <p class="ms-4">
                            <a href="mailto:kontakt@restaurant.no" class="contact-link">kontakt@restaurant.no</a>
                        </p>
                    </div>

                    <div class="info-block mb-3">
                        <h5><i class="bi bi-clock-fill me-2"></i>Åpningstider</h5>
                        <table class="table table-sm opening-hours ms-1">
                            <tbody>
                                <tr><td><strong>Mandag–Fredag:</strong></td><td>11:00 – 22:00</td></tr>
                                <tr><td><strong>Lørdag:</strong></td><td>12:00 – 23:00</td></tr>
                                <tr><td><strong>Søndag:</strong></td><td>12:00 – 21:00</td></tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-lg-6">
            <div class="card contact-card shadow-lg h-100">
                <div class="card-body p-4">

                    <h3 class="section-title mb-4">Gi oss en tilbakemelding!</h3>

                    <form asp-action="KontaktOss" method="post">

                        <div class="mb-3">
                            <label for="Navn" class="form-label">Navn</label>
                            <input type="text" class="form-control" id="Navn" name="Navn" required />
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">E-post</label>
                            <input type="email" class="form-control" id="Email" name="Email" required />
                        </div>

                        <div class="mb-3">
                            <label for="Melding" class="form-label">Melding</label>
                            <textarea class="form-control" id="Melding" name="Melding" rows="5" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Send melding</button>

                    </form>

                </div>
            </div>
        </div>


    </div>

    <!-- Transport help -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="alert transport-alert">
                <h5 class="alert-heading">Hvordan kommer du deg til oss?</h5>
                <p class="mb-0">
                    <strong>Kollektivtransport:</strong> T-bane til Grønland stasjon (5 min gange)<br>
                    <strong>Med bil:</strong> Begrenset gateparkering. Vi anbefaler offentlig transport.
                </p>
            </div>
        </div>
    </div>

</div>
