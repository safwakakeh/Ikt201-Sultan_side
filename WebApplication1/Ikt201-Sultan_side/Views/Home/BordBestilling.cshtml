@model Ikt201_Sultan_side.Models.Bordbestilling
@{
    ViewData["Title"] = "Bestill Bord";
}



<link rel="stylesheet" href="~/site.css" asp-append-version="true"/>

<section class="bordbestilling d-flex justify-content-center align-items-start">
    <div class="bestillings-card shadow-lg p-4 rounded-4">
        <div class="bestillingsTekst text-center mb-4">
            <h1 class="overskrift">Bestill bord</h1>
            <p>Her kan du bestille bord for ditt bes√∏k.</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }

    <form asp-action="Bestill" method="post">


        <!-- Navn -->
        <label asp-for="Navn" class="control-label"></label>
        <input asp-for="Navn" class="form-control" />
        <span asp-validation-for="Navn" class="text-danger"></span>
        <br />

        <!-- Telefon -->
        <label asp-for="Tlf" class="control-label"></label>
        <input asp-for="Tlf" class="form-control" type="tel" />
        <span asp-validation-for="Tlf" class="text-danger"></span>
        <br />

        <!-- Email -->
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <br />

        <!-- Gjester -->
        <!-- Gjester -->
        <label for="Gjester" class="control-label">Antall gjester</label>
        <select asp-for="Gjester" class="form-control">
            @for (var i = 1; i <= 10; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Gjester" class="text-danger"></span>
        <br />


        <!-- Time -->
        <label asp-for="Time" class="control-label"></label>
        <input asp-for="Time" class="form-control" type="datetime-local" />
        <span asp-validation-for="Time" class="text-danger"></span>
        <br /><br />

        <button type="submit" class="btn btn-primary">Bestill bord</button>

    </form>
    </div>
</section>
