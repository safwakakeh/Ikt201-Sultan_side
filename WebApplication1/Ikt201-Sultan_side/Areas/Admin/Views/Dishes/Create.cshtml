@model Dish
@{
    ViewData["Title"] = "Legg til ny rett";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Retter</a></li>
                <li class="breadcrumb-item active">Legg til ny</li>
            </ol>
        </nav>
        <h1><i class="bi bi-plus-circle"></i> Legg til ny rett</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Navn på rett *</label>
                        <input asp-for="Name" class="form-control" placeholder="F.eks. Margherita Pizza" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Category" class="form-label">Kategori *</label>
                            <select asp-for="Category" class="form-select">
                                <option value="">Velg kategori</option>
                                <option value="Forretter">Forretter</option>
                                <option value="Hovedretter">Hovedretter</option>
                                <option value="Pizza">Pizza</option>
                                <option value="Pasta">Pasta</option>
                                <option value="Burger">Burger</option>
                                <option value="Salat">Salat</option>
                                <option value="Dessert">Dessert</option>
                                <option value="Drikke">Drikke</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label">Pris (kr) *</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Beskrivelse</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Kort beskrivelse av retten..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Ingredients" class="form-label">Ingredienser</label>
                        <textarea asp-for="Ingredients" class="form-control" rows="2" placeholder="F.eks. Tomatsaus, mozzarella, basilikum"></textarea>
                        <span asp-validation-for="Ingredients" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Allergener</label>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input allergen-checkbox" type="checkbox" value="gluten" id="allergen_gluten">
                                    <label class="form-check-label" for="allergen_gluten">Gluten</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input allergen-checkbox" type="checkbox" value="melk" id="allergen_melk">
                                    <label class="form-check-label" for="allergen_melk">Melk/Laktose</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input allergen-checkbox" type="checkbox" value="fisk" id="allergen_fisk">
                                    <label class="form-check-label" for="allergen_fisk">Fisk</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input allergen-checkbox" type="checkbox" value="nøtter" id="allergen_notter">
                                    <label class="form-check-label" for="allergen_notter">Nøtter</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input allergen-checkbox" type="checkbox" value="peanøtter" id="allergen_peanotter">
                                    <label class="form-check-label" for="allergen_peanotter">Peanøtter</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input allergen-checkbox" type="checkbox" value="egg" id="allergen_egg">
                                    <label class="form-check-label" for="allergen_egg">Egg</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input allergen-checkbox" type="checkbox" value="skalldyr" id="allergen_skalldyr">
                                    <label class="form-check-label" for="allergen_skalldyr">Skalldyr</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input allergen-checkbox" type="checkbox" value="soya" id="allergen_soya">
                                    <label class="form-check-label" for="allergen_soya">Soya</label>
                                </div>
                            </div>
                        </div>
                        <input asp-for="Allergens" type="hidden" id="AllergensInput" />
                        <span asp-validation-for="Allergens" class="text-danger"></span>
                    </div>

                    <script>
                        document.addEventListener('DOMContentLoaded', function() {
                            const checkboxes = document.querySelectorAll('.allergen-checkbox');
                            const hiddenInput = document.getElementById('AllergensInput');

                            function updateAllergens() {
                                const selected = Array.from(checkboxes)
                                    .filter(cb => cb.checked)
                                    .map(cb => cb.value);
                                hiddenInput.value = selected.join(',');
                            }

                            checkboxes.forEach(cb => {
                                cb.addEventListener('change', updateAllergens);
                            });
                        });
                    </script>

                    <div class="mb-3">
                        <label for="imageFile" class="form-label">Bilde av rett</label>
                        <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">Maks 5MB. Støttede formater: JPG, PNG</small>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="IsVegan" class="form-check-input" type="checkbox" />
                                <label asp-for="IsVegan" class="form-check-label">
                                    Vegansk
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="IsHalal" class="form-check-input" type="checkbox" checked />
                                <label asp-for="IsHalal" class="form-check-label">
                                    Halal
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsAvailable" class="form-check-label">
                            Tilgjengelig for bestilling
                        </label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Lagre rett
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Avbryt
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Hjelp</h5>
            </div>
            <div class="card-body">
                <h6>Kategorier</h6>
                <p class="small">Velg passende kategori slik at kundene enkelt finner retten på menyen.</p>
                
                <h6>Allergener</h6>
                <p class="small">List opp alle allergener for rettens sikkerhet. Vanlige allergener:</p>
                <ul class="small">
                    <li>Gluten</li>
                    <li>Laktose</li>
                    <li>Egg</li>
                    <li>Nøtter</li>
                    <li>Skalldyr</li>
                    <li>Soya</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Image preview
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                if (file.size > 5 * 1024 * 1024) {
                    alert('Bildet er for stort! Maks 5MB.');
                    e.target.value = '';
                }
            }
        });
    </script>
}